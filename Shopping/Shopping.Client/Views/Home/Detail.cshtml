@model Shopping.Client.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<link rel="stylesheet" href="~/css/site.css" />

<h1>@Model.Name</h1>
<p><strong>Category:</strong> @Model.Category</p>
<p><strong>Description:</strong> @Model.Description</p>
<p><strong>Price:</strong> @Model.Price.ToString("C")</p>
<img src="@Model.ImageFile" alt="@Model.Name" style="width: 300px;" />

<form asp-action="AddToCart" asp-controller="Cart" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Name" />
    <input type="hidden" asp-for="Category" />
    <input type="hidden" asp-for="Description" />
    <input type="hidden" asp-for="ImageFile" />
    <input type="hidden" asp-for="Price" />
    <div class="form-group">
        <label for="quantity">Quantity:</label>
        <input type="number" id="quantity" name="quantity" value="1" min="1" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Add to Cart</button>
</form>

<p><a href="@Url.Action("Index", "Home")">Back to Products</a></p>
